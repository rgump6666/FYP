<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Chair Control"
            android:id="@+id/btnChairControl" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Auto Adjust"
            android:id="@+id/btnAutoAdjust" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Review Record"
            android:id="@+id/btnReviewRecord" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="View Current Sitting Position"
            android:id="@+id/btnViewCurrentSittingPosition" />

    </TableRow>

    <RelativeLayout
        android:id="@+id/function"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

</LinearLayout>